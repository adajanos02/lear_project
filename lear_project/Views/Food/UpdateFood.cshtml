@using lear_project.Models
@model Food

<h1>Update</h1>
<form asp-controller="Food" asp-action="UpdateFood" method="post" enctype="multipart/form-data">
    <input type="hidden" name="oldFoodId" value="@Model.Id" />

    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="newName" value="@Model.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" id="description" name="newDescription" value="@Model.Description" class="form-control" />
    </div>

    <div class="form-group">
        <label for="categoryId">Category:</label>
        <input type="text" id="categoryId" name="newCategoryId" value="@Model.CategoryId" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

